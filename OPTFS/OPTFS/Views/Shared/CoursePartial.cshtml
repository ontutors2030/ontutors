                            <path d="M25.1484 28.0723L29.5066 29.8443L20.2898 52.5129V52.5129C18.6045 52.9588 16.8275 52.2363 15.9316 50.7409V50.7409L25.1484 28.0723Z" fill="#323033" />
                            <path d="M11.2563 29.0143L12.0962 26.9485L19.725 28.1618C20.4179 28.2472 21.1121 27.8715 21.3902 27.2066L28.1762 10.9341C28.3185 10.5928 28.3393 10.2023 28.2049 9.82883L25.6526 2.81705L47.3337 11.413L40.4991 14.6979C40.1596 14.8601 39.877 15.1408 39.7232 15.5111L32.9728 31.6985C32.6552 32.3499 32.836 33.1493 33.4438 33.5978L39.628 38.1739L38.7232 40.3565L11.2563 29.0143Z" fill="#323033" />
                        </svg>
                    </div>*@
                @if (!string.IsNullOrWhiteSpace(course?.Description))
                {
                    if (course.Description.Length <= 255)
                    {
                        <div>@course.Description</div>
                    }
                    else
                    {
                        @*<div class="trimeEct">@course.Description</div>*@
                        <div>@course.Description.Substring(0, 255) ...</div>
                    }
                }
                @if (course?.FromDate != null && course.ToTime != null)
                {
                    <div class="trimeEct"><strong>Date :</strong> From @course.FromDate.Value.ToString("dd/MM/yyyy") To @course.ToDate.Value.ToString("dd/MM/yyyy")</div>
                }

                @if (!string.IsNullOrEmpty(course?.FromTime) && !string.IsNullOrEmpty(course.ToTime))
                {
                    <div><strong>Time :</strong> From @course.FromTime To @course.ToTime</div>
                }
                <strong>Price :</strong>
                @if (discount > 0)
                {
                    <strong> Was <s class="underLinedPrice">@price</s> Now @pure SAR</strong>
                }
                else
                {
                    <strong> @pure SAR</strong>
                }

            <div>
                <strong>Lectures Days :</strong>
                @{
                    string spliter = string.Empty;
                    if (course.Sat)
                    {
                        <span>Sat</span>
                        spliter = "-";
                    }

                    if (course.Sun)
                    {
                        <span>@spliter Sun</span>
                        spliter = "-";
                    }

                    if (course.Mon)
                    {
                        <span>@spliter Mon</span>
                        spliter = "-";
                    }

                    if (course.Tue)
                    {
                        <span>@spliter Tue</span>
                        spliter = "-";
                    }

                    if (course.Wen)
                    {
                        <span>@spliter Wen</span>
                        spliter = "-";
                    }

                    if (course.Thi)
                    {
                        <span>@spliter Thu</span>
                        spliter = "-";
                    }

                    if (course.Fri)
                    {
                        <span>@spliter Fri</span>
                    }
                }
            </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <div>
            @if (User.IsInRole("Student"))
            {
                if (!myUser.HasRequest(course.Id))
                {
                    <a href="~/StudentRequests/RequestJoin/@course.Id"
                       class="btn btn-primary btn-round">Request Join</a>
                }
                else if (myUser.HasRequest(course.Id, StudentRequestStatus.New))
                {
                    <button class="btn btn-primary btn-round disabled">Waiting</button>
                }
                else if (myUser.HasRequest(course.Id, StudentRequestStatus.Rejected))
                {
                    <a href="~/StudentRequests/RequestJoin/@course.Id"
                       class="btn btn-primary btn-round">Request Again</a>
                }
                else if (myUser.HasRequest(course.Id, StudentRequestStatus.Accepted))
                {
                    var request = myUser.GetRequest(course.Id);
                    if (request != null)
                    {
                        <a href="javascript:void(0)" class="btn btn-primary btn-round"
                           onclick="createCoursePaymentForm('.paymentDiv',@course.Id,@request.Id,@pure, '@course.Name','Payment/Success', 'Payment/Complete'); ">Buy Now</a>
                    }
                }
                else if (myUser.HasRequest(course.Id, StudentRequestStatus.Payed))
                {
                    <button class="btn btn-primary btn-round disabled">
                        Payed
                    </button>
                }

                <a href="~/Profile/TutorCourseDetails/@course.Id"
                   class="btn btn-primary btn-round btn-simple">View Details</a>
            }
            else if (User.IsInRole("Tutor"))
            {
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"
                   class="btn btn-primary btn-round btn-simple">Details</a>
                if (course.TutorId == myUser.Id)
                {
                    <div style="position:absolute;right:10px;bottom:15px">
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"
                           class="btn-sm btn-primary" style="margin:3px">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>

                        <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id"
                           class="btn-sm btn-info" style="margin:3px">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </a>

                        <a asp-controller="Courses" asp-action="Delete" asp-route-id="@course.Id"
                           class="btn-sm btn-danger" style="margin:3px">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>