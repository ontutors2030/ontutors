@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model OPTFS.Models.Course
@{
    var myUser = await UserManager.GetUserAsync(User);
    var course = @Model;
    double price = 0, discount = 0, pure = 0;

    if (Model.Price != null)
        price = Convert.ToDouble(Model.Price.Value);
    if (Model.Discount != null)
        discount = Convert.ToDouble(Model.Discount.Value);
    pure = price - discount;
    /*decimal price = 0, discount = 0, pure = 0;
    if (Model.Price != null)
        price = Model.Price.Value;
    if (Model.Discount != null)
        discount = Model.Discount.Value;
    pure = price - discount;*/

    string box = "box";
    string badgeText = string.Empty;
    string bdClass = "bg-primary";
    if (discount > 0 && price != 0)
    {
        box = "box";
        badgeText = Math.Round(((discount / price) * 100)).ToString() + "% Off";
        bdClass = "bg-danger";
    }
}

<div class="card @box" style="zoom:80%">
    @if (discount > 0 && price != 0)
    {
        <div class="courseBadge courseBadge-top-right"><span class="@bdClass">@badgeText</span></div>
    }
    <div class="card-header text-center">
        <div style="position:absolute;left:5px;">
            @await Html.PartialAsync("RatingViewerPartial", course)
        </div>
        <strong>@course.Name</strong><br />
        by
        @if (User.IsInRole("Student"))
        {
            <a href="~/Profile/ViewTutorProfile/@course?.TutorId">@course?.Tutor?.FullName</a>
        }
        else
        {
            <span>@course?.Tutor?.FullName</span>
        }
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
