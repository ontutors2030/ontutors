@model OPTFS.Models.ApplicationUser

@{
    ViewData["Title"] = "Profile";
}
<link href="~/css/profileCard.css" rel="stylesheet" />
<h1>Profile</h1>
<hr />
<div class="row">
    <div class="offset-md-3 col-md-6">
        <div class="card">
            <div class="body">
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/@Model.PersonalImageUrl" style="height:150px;width:150px;" class="img-thumbnail" />
                    </div>

                    <div class="col-md-9">
                        <div class="row text-center">
                            <h4 class="m-t-0 m-b-0"><strong>@Model.FullName</strong></h4>
                        </div>
                        <div>
                            <p>
                                @Model.Specialty.Name<br />
                                @Model.Country.Name - @Model.City.Name<br />
                                @Model.Experience<br />
                                @Model.Qualifications
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>