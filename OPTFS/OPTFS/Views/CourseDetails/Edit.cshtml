@model OPTFS.Models.CourseDetail

@{
    ViewData["Title"] = "Edit";
}

<div class="offset-md-4 col-md-4">
    <div style="text-align: center">
        <h1 class="boldItalicText">Edit CourseDetail</h1>
    </div>
    <hr />
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CourseId" name="CourseId" value="@ViewBag.CourseId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelIndex" class="control-label"></label>
                <input asp-for="LevelIndex" class="form-control" />
                <span asp-validation-for="LevelIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-lg defaultBtn" />
                <a asp-action="Index" asp-route-id="@ViewBag.CourseId" class="btn btn-lg btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
