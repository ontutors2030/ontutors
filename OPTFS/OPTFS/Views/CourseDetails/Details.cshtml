@model OPTFS.Models.CourseDetail

@{
    ViewData["Title"] = "Details";
}

<div class="offset-md-4 col-md-4">
    <div style="text-align: center">
        <h1 class="boldItalicText">CourseDetail Details</h1>
    </div>

    <div>        
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Course)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Course.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LevelIndex)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LevelIndex)
            </dd>            
        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-lg defaultBtn" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index" asp-route-id="@ViewBag.CourseId" class="btn btn-lg btn-danger">Back to List</a>
    </div>
</div>