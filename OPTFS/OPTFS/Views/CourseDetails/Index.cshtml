@model IEnumerable<OPTFS.Models.CourseDetail>

@{
    ViewData["Title"] = "Index";
}

<div class="pageHeader">
    <h1 class="boldItalicText">Course Details Page</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table id="ListTable" class="table table-bordered table-hover table-sm">
    <thead class="datagridheader">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LevelIndex)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
            foreach (var item in Model)
            {
                <tr class="tr">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LevelIndex)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn-sm btn-primary" style="margin:3px">
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>

                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn-sm btn-info" style="margin:3px">
                            <i class="fa fa-pencil-square" aria-hidden="true"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn-sm btn-danger" style="margin:3px">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                    @{i = i + 1;}
                </tr>
            }}
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        var AutoSearch = $("#AutoSearch").val();
        if (AutoSearch) {
            $("#ListInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#ListTable .tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });

            });
        }
    });
</script>